<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an application to display Textview when checkbox is checked and
hide otherwise A6 Write a program to show four images around Textview."
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter anything"
        android:scrollbarSize="20sp"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:id="@+id/ed"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visible and Un-visible"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/check"
        />
    </FrameLayout>

</LinearLayout>
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:padding="15dp"-->
<!--            android:hint="Enter password"-->
<!--            android:drawableLeft="@drawable/ic_baseline_lock_24"-->
